<!-- create-quiz.html -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to Kahoot</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to right, #99ccff, #99ffcc);
        }
        .container {
            margin-top: 100px;
        }
        h2 {
            color: #FF4500;
        }
        form {
            background-color: #FFF;
            padding: 20px;
            border-radius: 10px;
            text-align: left;
            opacity: 0;
            animation: slideInAnimation 1s ease-in-out forwards;
        }
        label {
            color: #000;
            margin-bottom: 5px;
            display: block;
        }
        input {
            width: 100%;
            padding: 8px;
            margin-bottom: 15px;
            box-sizing: border-box;
        }
        button {
            background-color: #FF4500;
            color: #FFF;
            border: none;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
            transform: scale(1);
        }
        button:hover {
            transform: scale(1.05);
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }
        hr {
            border: 1px solid #ddd;
        }

        @keyframes slideInAnimation {
            from {
                opacity: 0;
                transform: translateY(-50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
<div class="container">
    <h2>Create Quiz</h2>
    <form method="POST" action="/create-quiz">
        <label for="title">Quiz Title:</label>
        <input type="text" name="title" required>
        <hr>
        <h3>Questions:</h3>
        <div id="questions-container">
            <!-- Questions will be dynamically added here using JavaScript -->
        </div>
        <button type="button" onclick="addQuestion()">Add Question</button>
        <button type="button" onclick="closeQuestion()">Close Question</button>


        <button type="submit">Create Quiz</button>
    </form>
</div>
<a href="/home" class="btn btn-kahoot btn-lg">Return to Homepage</a>
<script>
    function addQuestion() {
        const container = document.getElementById('questions-container');
        const questionNumber = container.children.length + 1;

        const questionDiv = document.createElement('div');
        questionDiv.className = 'question';
        questionDiv.innerHTML = `
                <h4>Question ${questionNumber}</h4>
                <label for="questionText${questionNumber}">Question Text:</label>
                <input type="text" name="questions[${questionNumber - 1}][questionText]" required>
                <label for="options${questionNumber}">Options (comma-separated):</label>
                <input type="text" name="questions[${questionNumber - 1}][options]" required>
                <label for="correctOptionIndex${questionNumber}">Correct Option Index:</label>
                <input type="number" name="questions[${questionNumber - 1}][correctOptionIndex]" required>
                <hr>
            `;

        container.appendChild(questionDiv);
    }
    function closeQuestion() {

        const currentQuestion = document.querySelector('.question');


        if (currentQuestion) {

            currentQuestion.style.display = 'none';
        } else {

            alert('No question to close.');
        }
    }
</script>
</body>
</html>